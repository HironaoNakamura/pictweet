<div class="content__post" style="background-image: url(<%= tweet.image %>);">
  
   <% if current_user && current_user.id == tweet.user_id %>
    <div class="more">
      <span><%= image_tag 'arrow_top.png' %></span>
      <ul class="more_list">
        <li>
          <%= link_to 'Edit', "/tweets/#{tweet.id}/edit",
          method: :get%>
        </li>
        <li>
          <%= link_to 'Delete', "/tweets/#{tweet.id}", method: :delete %>
        </li>
      </ul>
    </div>
  <% end %>
  <p>
    <%= br(tweet.text) %>
  </p>
  <span class="name">
   <a href="">
    <span>投稿者</span><%= tweet.user.nickname %>
   </a>
  </span>
</div>